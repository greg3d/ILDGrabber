<Window x:Class="DXTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" x:Name="mw" MinHeight="600" MinWidth="800">
    <Grid Background="#FFEEEEF2" >
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="48" Height="61"/>
            <RowDefinition Height="180*"/>
            <RowDefinition Height="180*"/>
            <RowDefinition Height="161*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <local:ChartControl x:Name="chartControl1" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" MouseLeftButtonDown="chartControl1_MouseLeftButtonDown" MouseMove="chartControl1_MouseMove" MouseLeftButtonUp="chartControl1_MouseLeftButtonUp" MouseLeave="chartControl1_MouseLeave"/>
        <Label x:Name="label" Content="{Binding Fps, ElementName=chartControl1}" Margin="0,10,10,10" Background="#FFA6A6A6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" HorizontalAlignment="Right" Width="28"/>
        <Button x:Name="ConnectButton" Content="Коннект" Margin="10,10,43,10" Click="ConnectButton_Click" BorderThickness="1" Style="{DynamicResource RoundedButton}" Grid.ColumnSpan="2" />
        <Button x:Name="GrabButton" Content="Grab" Margin="10,36,10,0" Click="GrabButton_Click" IsEnabled="False" Grid.Row="1" Height="28" VerticalAlignment="Top"/>
        <Button x:Name="StopButton" Content="Stop" Margin="10,36,10,0" RenderTransformOrigin="0.462,0.5" Click="StopButton_Click" IsEnabled="False" Grid.Row="1" Height="28" VerticalAlignment="Top" Grid.Column="1"/>

        <Button x:Name="SaveDataToFile" Content="Сохранить" Margin="10,0,10,10" Grid.Row="3" Height="33" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="SaveDataToFile_Click"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="114,10,0,10" TextWrapping="Wrap" Text="192.168.0.252" Width="103" VerticalContentAlignment="Center" TextAlignment="Center"/>
        <StackPanel Margin="10,0,10,48" Grid.Row="3" Height="78" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <Label Content="Выберите формат"/>
            <RadioButton GroupName="SaveFormat" Content="CSV"  IsChecked="{ Binding CurrentFormat, Converter={StaticResource enumToBoolConverter}, ConverterParameter=csv }" />
            <RadioButton GroupName="SaveFormat" Content="TXT" IsChecked="{ Binding CurrentFormat, Converter={StaticResource enumToBoolConverter}, ConverterParameter=txt }" />
            <RadioButton GroupName="SaveFormat" Content="Binary" IsChecked="{ Binding CurrentFormat, Converter={StaticResource enumToBoolConverter}, ConverterParameter=bin }" />
        </StackPanel>
        <StackPanel Margin="10,10,10,0" Grid.Row="2" Grid.ColumnSpan="2" Height="125" VerticalAlignment="Top">
            <Label Content="Постобработка" FontWeight="Bold" Padding="0,5,0,0" Height="28" VerticalContentAlignment="Bottom"/>
            <Separator Height="11" Margin="0" RenderTransformOrigin="0.543,0.51"/>
            <StackPanel Height="38" Orientation="Horizontal">
                <Label Content="Сглаживание" Width="83" HorizontalAlignment="Left" Padding="0" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Height="28" Margin="0,2"/>
                <TextBox TextWrapping="Wrap" Text="10" Margin="0" Height="28" Width="40" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False"/>
            </StackPanel>
            <Button Content="Применить" Height="28" IsEnabled="False"/>
        </StackPanel>
        <Label Content="Сохранение результата" Margin="10,0,10,126" Grid.Row="3" VerticalAlignment="Bottom" FontWeight="Bold" Height="26" Grid.ColumnSpan="2"/>
        <Label x:Name="label1" Content="IP адрес MOXA" Grid.Column="2" HorizontalAlignment="Left" Margin="10,11,0,10" Width="113" VerticalContentAlignment="Center" FontSize="14" Padding="0"/>

        <Label x:Name="label1_Copy" Content="Каталог:" Grid.Column="2" HorizontalAlignment="Left" Margin="252,10,0,10" Width="64" VerticalContentAlignment="Center" FontSize="14" Padding="0"/>
        <CheckBox x:Name="checkBoxDemo" Content="DEMO" Grid.Column="2" Margin="0,16,10,16" HorizontalAlignment="Right" IsChecked="{Binding Path=Demo}" VerticalAlignment="Center" Height="16" Width="54"/>
        <Grid Height="16" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="EStatus1" Grid.Column="0" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus2" Grid.Column="1" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus3" Grid.Column="2" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus4" Grid.Column="3" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus5" Grid.Column="4" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus6" Grid.Column="5" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus7" Grid.Column="6" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse x:Name="EStatus8" Grid.Column="7" Fill="#FFF4F4F5" Stroke="#FFC9C9C9" Width="16"  Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Left" Margin="316,10,0,10" VerticalAlignment="Center" Height="28" Width="188">
            <TextBox x:Name="textBoxSaveDir" Grid.Column="1" Margin="0" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="{Binding Path=SaveDir}" HorizontalAlignment="Left" Width="151" Height="28" VerticalAlignment="Center"/>
            <Button x:Name="button" IsEnabled="False" Content="..." Width="37" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,2" Click="button_Click"/>
        </StackPanel>
        <Grid Grid.ColumnSpan="2" Margin="10,93,10,10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label2" Content="Масштаб X" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,2,0,3" HorizontalAlignment="Center"/>
            <Label x:Name="label2_Copy" Content="Масштаб Y" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="13,2,10,3" HorizontalAlignment="Center" Grid.Column="2"/>
            <Button x:Name="buttonXMinus" Content="-" Margin="0,5,5,0" Grid.Row="1" FontSize="20" Style="{DynamicResource RoundedButton}"/>
            <Button x:Name="buttonXPlus" Content="+" Margin="0,5,5,0" Grid.Row="1"  FontSize="20" Grid.Column="1" Style="{DynamicResource RoundedButton}" BorderBrush="#FF9295CD">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEAE2FF" Offset="0"/>
                        <GradientStop Color="#FFC6BBE4" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="buttonYMinus" Content="-" Margin="5,5,0,0" Grid.Row="1" FontSize="20" Grid.Column="2" Style="{DynamicResource RoundedButton}" Click="buttonYMinus_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEAE2FF" Offset="0"/>
                        <GradientStop Color="#FFC6BBE4" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="buttonYPlus" Content="+" Margin="5,5,0,0" Grid.Row="1" FontSize="20" Grid.Column="3" Style="{DynamicResource RoundedButton}" Click="buttonYPlus_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEAE2FF" Offset="0"/>
                        <GradientStop Color="#FFC6BBE4" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</Window> 
